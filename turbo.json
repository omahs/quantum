{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "write": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "generate": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build", "generate:client", "generate:schema"]
    },
    "build:docker": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "dependsOn": ["^build"]
    },
    "generate:schema": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "generate:client": {
      "outputs": ["generated/**"],
      "dependsOn": ["^build", "^generate:schema"]
    },
    "test": {
      "inputs": ["src/**", "src/**/*.unit.ts", "tests-i9n/**", "tests-e2e/**"],
      "dependsOn": [
        "^build",
        "generate:proto",
        "build:docker",
        "generate:client",
        "generate:schema"
      ]
    },
    "test:unit": {
      "inputs": ["src/**", "src/**/*.unit.ts"],
      "dependsOn": ["^build", "generate:client", "generate:schema"]
    },
    "test:i9n": {
      "inputs": ["src/**", "tests-i9n/**"],
      "dependsOn": ["^build", "generate:client", "generate:schema"]
    },
    "test:e2e": {
      "inputs": ["src/**", "tests-e2e/**"],
      "dependsOn": [
        "build:docker",
        "^build:docker",
        "generate:client",
        "generate:schema"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {}
  }
}
